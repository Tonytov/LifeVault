            android:theme="@style/Theme.LifeVault" />
            
        <activity
            android:name=".presentation.ui.habits.SmokingHabitFormActivity"
            android:exported="false"
            android:theme="@style/Theme.LifeVault" />
            
        <activity
            android:name=".presentation.ui.habits.AlcoholHabitFormActivity"
            android:exported="false"
            android:theme="@style/Theme.LifeVault" />
            
        <activity
            android:name=".presentation.ui.habits.SugarHabitFormActivity"
